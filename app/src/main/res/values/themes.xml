<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpaceExplorer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SpaceExplorer" parent="Base.Theme.SpaceExplorer" />

    <style name="TextSpec">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextSpec.Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Field.ActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Field.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextSpec.Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Value.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="TextSpec.Value.SmallDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/regular_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.Value.SmallBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/popping_bold</item>
    </style>

    <style name="TextSpec.Heading1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="TextSpec.LabelBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.LabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextSpec.LabelSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="TextSpec.LabelWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/semi_bold_poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>